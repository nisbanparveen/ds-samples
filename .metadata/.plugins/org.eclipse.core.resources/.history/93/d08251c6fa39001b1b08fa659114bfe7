package LinkedList;

import LinkedList.LinkedList.Node;

public class Deletion {
	
	public LinkedList deleteFirst(LinkedList list) {
		Node tempNode= list.head;
		
		if(tempNode != null) {
			list.head= tempNode.next;
		}
		return list;
	}
	
	public LinkedList deleteLast(LinkedList list,int position) {
		
		Node previous=list.head;
		int count=1;
		while(count<position-1) {
			previous= previous.next;
			count++;
		}
		Node currentNode= previous.next;
		previous=currentNode.next;
		currentNode=null;
		return list;
	}
	
	public static void main(String[] args) {
		LinkedList list= new LinkedList();
		list.insert(list, 1);
		list.insert(list, 2);
		list.insert(list, 3);
		
		list.printList(list);
		Deletion delete= new Deletion();
		//delete.deleteFirst(list);
		delete.deleteLast(list,1);
		
		list.printList(list);
	}

}
